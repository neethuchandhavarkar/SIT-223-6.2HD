pipeline {
    agent any 

    stages {
        stage('Checkout') {
            steps {
                // Checkout your source code from your repository
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies if needed
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        // Run pytest and generate results.xml in the test-reports directory
                        bat 'pytest --junitxml=test-reports/results.xml'
                    } catch (Exception e) {
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }

        stage('Publish Test Results') {
            steps {
                // Publish the test results to Jenkins
                junit 'test-reports/results.xml'
            }
        }
    }
    
    post {
        always {
            // Clean up or perform additional steps if needed
            echo 'Cleaning up...'
        }
    }
}
