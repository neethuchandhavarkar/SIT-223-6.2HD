pipeline {
    agent any
    tools {
        python 'Python 3.9'
    }

    stages {
        stage('Build') {
            steps {
                bat 'pip install -r requirements.txt'
                bat 'python setup.py sdist'
                archiveArtifacts 'dist/*.tar.gz'
            }
        }
        stage('Test') {
            steps {
                bat 'pytest'
                junit 'junit.xml'
            }
        }
        stage('Code Quality Analysis') {
            steps {
                bat 'pylint --from-stdin < src'
                bat 'flake8 src'
            }
        }
    }
}
